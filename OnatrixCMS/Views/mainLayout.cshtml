@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
	var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"{ViewBag.Title} | Onatrix - Finacial Solutions for Your Buisness" : "Onatrix - Finacial Solutions for Your Buisness";
	var pageDescription = Model?.Value<string>("pageDescription") ?? "";
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content="@pageDescription">
	<meta name="keywords" content="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/scss/main.css">
    <title>@pageTitle</title>
  </head>
  <body>

	<div class="wrapper">

        @await Html.PartialAsync("_TopHeader")

        @await Html.PartialAsync("_Header")

		<main>
			@RenderBody()
		</main>

		@await Html.PartialAsync("_Footer")

	</div>
    
	<script src="/scripts/main.js"></script>
    <script src="https://kit.fontawesome.com/4d5d7d75c3.js" crossorigin="anonymous"></script>
  </body>
</html>